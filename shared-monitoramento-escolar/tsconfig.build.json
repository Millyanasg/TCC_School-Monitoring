{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "outDir": "./dist",
      "declaration": true,
      "removeComments": true,
      "sourceMap": false
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "test", "dist", "**/*spec.ts"],
    "watchOptions": {
      "watchFile": "dynamicPriorityPolling",
      "watchDirectory": "dynamicPriorityPolling",
      "excludeDirectories": ["**/node_modules", "dist"]
    }
  }
  